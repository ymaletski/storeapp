<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

  <Properties>
    <Property name="LOG_DIR">logs</Property>
    <Property name="ARCHIVE">${LOG_DIR}/archive</Property>
    <Property name="PATTERN">%-5level %d{ISO8601} [%t] %c:%M(%L): %m%n</Property>
  </Properties>

  <Appenders>

    <RollingFile name="HibernateFile" fileName="${LOG_DIR}/HF.log"
      filePattern="${ARCHIVE}/InitialSystem.log.%d{yyyy-MM-dd-hh-mm}.zip">
      <PatternLayout pattern="${PATTERN}"/>
      <Policies>
        <!--<TimeBasedTriggeringPolicy />-->
        <SizeBasedTriggeringPolicy size="750 KB"/>
      </Policies>
      <DefaultRolloverStrategy max="20"/>
    </RollingFile>

    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="${PATTERN}"/>
    </Console>

  </Appenders>

  <Loggers>

    <Root level="all">
      <AppenderRef ref="Console"/>
    </Root>

    <Logger name="ru.mail.yura.App" level="info" additivity="false">
        <AppenderRef ref="HibernateFile"/>
        <AppenderRef ref="Console"/>
    </Logger>

    <Logger name="ru.mail.yura.handlers.Handler" level="info" additivity="false">
        <AppenderRef ref="HibernateFile"/>
        <AppenderRef ref="Console"/>
    </Logger>

    <Logger name="ru.mail.yura.util.DBFiller" level="info" additivity="false">
        <AppenderRef ref="HibernateFile"/>
        <AppenderRef ref="Console"/>
    </Logger>

  </Loggers>
</Configuration>
